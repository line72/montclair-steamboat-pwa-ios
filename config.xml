<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" id="com.gotransitapp.steamboat" version="1.2.2">
    <name>Go Steamboat</name>
    <description>Real Time Tracking of the Buses for Steamboat Springs, CO</description>
    <author email="line72@line72.net" href="http://line72.net">
        Marcus Dillavou
    </author>
    <content src="https://steamboat.gotransitapp.com/index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-hostedwebapp" spec="https://github.com/manifoldjs/ManifoldCordova#v0.3.2-development" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <engine name="ios" spec="~4.5.5" />
</widget>